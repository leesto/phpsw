{% if photos %}
    <section id="photos" class="photos box">
        <header class="box__header">
            <h2>Photos</h2>
        </header>

        <ul class="list list--inline">
            {% for photo in photos %}
                <li>
                    <a href="#photo-{{ photo.photo_id }}" class="photo">
                      <img src="{{ photo.thumb_link }}" alt="">
                    </a>

                    <!-- lightbox container hidden with CSS -->
                    <a href="#photos" id="photo-{{ photo.photo_id }}" class="lightbox photo">
                      <img src="{{ photo.highres_link }}" alt="">
                    </a>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endif %}
