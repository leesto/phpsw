{% if photos %}
  <section id="photos" class="photos">
    <header class="box__header">
      <h2>Photos</h2>
    </header>

    <ul class="list list--inline list--images list--photos">
      {% for photo in photos %}
        <li>
          <a href="{{ photo(photo.highres_link) }}" class="photo swipebox" rel="photos">
            <img src="{{ thumbnail(photo.thumb_link) }}" alt="" width="80" height="60">
          </a>
        </li>
      {% endfor %}
    </ul>
  </section>
{% endif %}
