<article class="event event--{{ event.status }} box">
    <h3>
        <a href="{{ event.url }}">
            {{ event.name }}
        </a>
    </h3>

    {% if event.status == 'upcoming' %}
        <div class="event__description">
            {{ event.description | raw }}
        </div>

        {% if event.venue %}
            <p
                class="event__venue"
                {% if (event.venue.lat) %}data-latitude="{{ event.venue.lat }}"{% endif %}
                {% if (event.venue.lon) %}data-longitude="{{ event.venue.lon }}"{% endif %}
            >
                <span class="event__venue__name">{{ event.venue.name }}</span>,
                {{ event.venue.address_1 }},
                {{ event.venue.city }}
            </p>
        {% endif %}
    {% endif %}

    <p>
        {{ event.yes_rsvp_count }}
        {% if event.status == 'upcoming' %}
            Attending
        {% else %}
            Attended
        {% endif %}
    </p>

    <time datetime="{{ event.date.format(constant('DATE_W3C')) }}">
        {{ event.date.format('j') }}
        <span>{{ event.date.format('M') }}</span>
    </time>
</article>
