<!DOCTYPE html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ block('title') | trim | default(app.title) }}</title>
    <meta name="description" content="{{ block('description') | trim | default(app.description) }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block og -%}
      <meta property="og:site_name" content="{{ app.name }}">
      <meta property="og:type" content="{{ block('og_type') | trim | default('website') }}">
      <meta property="og:url" content="{{ app.request.uri }}">
      <meta property="og:title" content="{{ block('title') | trim | default(app.title) }}">
      <meta property="og:description" content="{{ block('description') | trim | default(app.description) }}">
      <meta property="og:image" content="{{ block('og_image') | default(block('hero')) | trim }}">
    {%- endblock -%}
    {%- block twitter -%}
      <meta name="twitter:card" content="{{ block('twitter_card') | trim | default('summary_large_image') }}">
      <meta name="twitter:url" content="{{ app.request.uri }}">
      <meta name="twitter:title" content="{{ block('title') | trim | default(app.title) }}">
      <meta name="twitter:description" content="{{ block('description') | trim | default(app.description) }}">
      <meta name="twitter:image" content="{{ block('twitter_image') | default(block('hero')) | trim }}">
      <meta name="twitter:site" content="{{ block('twitter_site') | trim | default('@' ~ app.twitter.user) }}">
      <meta name="twitter:creator" content="{{ block('twitter_creator') | trim | default('@' ~ app.twitter.user) }}">
    {% endblock %}
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="canonical" href="{{ app.request.uri }}">
    <link rel="stylesheet" href="/rev/{{ 'now' | date('YmdHi') }}/css/vendor.css">
    <link rel="stylesheet" href="/rev/{{ 'now' | date('YmdHi') }}/css/main.css">
  </head>
  <body>
    {% block body %}
      <div class="content">
        <main>
          {% block main %}
            <div class="container">
              <header class="page-header">
                {% block page_header %}
                  <h1>{{ block('title') }}</h1>
                {% endblock %}
              </header>

              {{ block('content') }}
            </div>
          {% endblock %}
        </main>
      </div>
    {% endblock %}

    <script src="/rev/{{ 'now' | date('YmdHi') }}/js/vendor.js"></script>
    <script src="/rev/{{ 'now' | date('YmdHi') }}/js/main.js"></script>
  </body>
</html>
