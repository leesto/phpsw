{% extends 'base.html.twig' %}

{% block hero %}
  {{ event.photos ? path('meetup_photo', {id: random(event.photos).id, size: 'highres'}) }}
{% endblock %}

{% block title %}
  {{ event.name }}
{% endblock %}

{% block page_header %}
  <div class="row">
    <div class="col-xs-9">
      <h1>
        {{ block('title') }}

        <small>
          {{ event.date.format('F Y') }}
        </small>
      </h1>
    </div>

    <div class="col-xs-3 text-right">
      <time class="calendar-date" datetime="{{ event.date.format(constant('DATE_W3C')) }}">
         <span class="calendar-date__month">{{ event.date.format('M') }}</span>
         <span class="calendar-data__day">{{ event.date.format('d') }}</span>
      </time>
    </div>
  </div>
{% endblock %}

{% block main %}
  <div id="event-{{ event.id }}" class="event event--{{ event.status }}">
    <div class="container">
      <header class="page-header event__header">
        {{ block('page_header') }}
      </header>

      {% if event.yes_rsvp_count > 0 or event.rating is defined and event.rating.average > 3 %}
        <div class="event__stats text-right">
          {% if event.yes_rsvp_count > 0 %}
            <a href="#attendees" class="event__stats__stat">
              <i class="fa fa-group"></i>
              {{ event.yes_rsvp_count }}

              {% if event.status == 'upcoming' %}
                attending
              {% else %}
                attended
              {% endif %}
            </a>
          {% endif %}

          {% if event.rating is defined and event.rating.average > 3 %}
            <span class="event__stats__stat">
              <i class="fa fa-thumbs-o-up"></i>
              {{ event.rating.average | round(1) }}/5 by {{ event.rating.count }} {{ event.group.who | lower }}
            </span>
          {% endif %}
        </div>
      {% endif %}

      <div class="event__body">
        <div class="row">
          <div class="col-sm-9">
            <div class="event__description">
              {{ event.description | raw }}
            </div>
          </div>
          <div class="col-sm-3 text-right">
            <a href="{{ event.url }}" class="btn btn-primary">
              {% if event.status == 'upcoming' %}
                RSVP
              {% else %}
                View on Meetup
              {% endif %}
            </a>
          </div>
        </div>

        {% if event.talks %}
          <div id="talks" class="event__talks">
            <h2>Talks</h2>

            <ul class="list">
              {% for talk in event.talks %}
                <li id="talk-{{ talk.id }}" class="talk">
                  <h3>
                    {% if talk.slides %}
                      <a href="{{ talk.slides }}">
                        {{ talk.title }}
                        <i class="fa fa-external-link"></i>
                      </a>
                    {% else %}
                      {{ talk.title }}
                    {% endif %}
                  </h3>

                  <a
                    href="{{ path('speaker', {slug: talk.speaker.slug}) }}"
                    {% if talk.speaker.member.bio is defined %}
                      title="{{ talk.speaker.member.bio }}"
                    {% endif %}
                  >
                    {%- if talk.speaker.photo is defined -%}
                      <div class="avatar avatar--small">
                        <img src="{{ path('speaker_photo', {slug: talk.speaker.slug}) }}" alt="{{ talk.speaker.name }}">
                      </div>
                    {%- endif -%}

                    <span class="fn">{{ talk.speaker.name }}</span>
                  </a>

                  {%- if talk.speaker.bio is defined -%}
                    , {{ talk.speaker.bio | raw }}
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        {% if event.photos %}
          <section id="photos" class="photos">
            <h2>Photos</h2>

            <ul class="list list--inline list--images">
              {% for photo in event.photos %}
                <li>
                  <a href="#photo-{{ photo.photo_id }}" class="photo">
                    <img src="{{ path('meetup_photo', {id: photo.id, size: 'thumb'}) }}" alt="" width="80" height="60">
                  </a>

                  <!-- lightbox container hidden with CSS -->
                  <a href="#x" id="photo-{{ photo.photo_id }}" class="lightbox photo">
                    <img src="{{ path('meetup_photo', {id: photo.id}) }}" alt="">
                  </a>
                </li>
              {% endfor %}
            </ul>
          </section>
        {% endif %}
      </div>
    </div>

    {% if event.venue %}
      <div
        id="venue" class="event__venue"
        {% if (event.venue.lat) %}data-latitude="{{ event.venue.lat }}"{% endif %}
        {% if (event.venue.lon) %}data-longitude="{{ event.venue.lon }}"{% endif %}
        style="background-image: url('{{
            'http://maps.googleapis.com/maps/api/staticmap?markers='
            ~ event.venue.lat ~ ',' ~ event.venue.lon ~
            '&scale=2&size=640x320&zoom=16'
        }}')"
      >
        <div class="event__venue__overlay">
          <h2>Venue</h2>

          <p class="event__venue__address">
            <strong class="event__venue__name">{{ event.venue.name }}</strong>,<br>
            {{ event.venue.address_1 | trim }},<br>
            {{ event.venue.city }}
          </p>
        </div>
      </div>
    {% endif %}

    <div id="attendees" class="container">
      {% if event.rsvps is defined %}
        <h2 id="attendees">Attendees</h2>

        <ul class="event__attendees list list--images list--inline">
          {% for rsvp in event.rsvps if rsvp.response == 'yes' %}
            <li>
              <a href="{{ app.meetup.url }}/members/{{ rsvp.member.member_id }}" class="event__attendee" title="{{ rsvp.member.name }}">
                <div class="avatar avatar--small">
                  <img src="{{ path('member_photo', {id: rsvp.member.member_id, size: 'thumb'}) }}" alt="{{ rsvp.member.name }}">
                </div>
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}

      {% if 'basekit' in event.venue.name | lower or
            'brightpearl' in event.venue.name | lower or
            event.date > date('2014-08-01')
      %}
        <footer class="event__footer">
          <h2 id="sponsors">Sponsors</h2>

          <div class="row">
            {% if 'basekit' in event.venue.name | lower %}
              <div class="col-xs-4 col-sm-3">
                <a href="http://www.basekit.com">
                  <img src="/images/sponsors/basekit.png" alt="BaseKit">
                </a>
              </div>
            {% endif %}

            {% if 'brightpearl' in event.venue.name | lower %}
              <div class="col-xs-4 col-sm-3">
                <a href="https://www.brightpearl.com">
                  <img src="/images/sponsors/brightpearl.png" alt="Brightpearl">
                </a>
              </div>
            {% endif %}

            {% if event.date > date('2014-08-01') %}
              <div class="col-xs-4 col-sm-3">
                <a href="http://www.ents24.com">
                  <img src="/images/sponsors/ents24.png" alt="Ents24">
                </a>
              </div>

              <div class="col-xs-4 col-sm-3">
                <a href="http://www.redrockconsulting.co.uk">
                  <img src="/images/sponsors/redrock.png" alt="Redrock Consulting">
                </a>
              </div>
            {% endif %}
          </div>
        </footer>
      {% endif %}
    </div>
  </div>
{% endblock %}
