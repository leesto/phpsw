{% extends 'base.html.twig' %}

{% block title %}
  Talks
{% endblock %}

{% block hero %}
  {{ hero('http://photos3.meetupstatic.com/photos/event/8/4/7/8/highres_366333912.jpeg') }}
{% endblock %}

{% block content %}
  <div class="row">
    {% for talk in talks[0:6] %}
      <div class="col-xs-6 col-sm-4">
        {{ include('talks_page__talk.html.twig') }}
      </div>

      {% if loop.index % 2 == 0 %}
        <div class="clearfix visible-xs"></div>
      {% endif %}

      {% if loop.index % 3 == 0 %}
        <div class="clearfix hidden-xs"></div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="row">
    <div class="col-sm-8">
      {{ include('talks.html.twig', {'talks': talks[6:]}) }}
    </div>

    <div class="col-sm-4">
      {{ include('speaking.html.twig') }}
    </div>
  </div>
{% endblock %}
